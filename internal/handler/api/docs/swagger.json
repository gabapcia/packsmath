{
    "swagger": "2.0",
    "info": {
        "description": "An application that can calculate the number of packs we need to ship to the customer",
        "title": "PacksMath API",
        "contact": {}
    },
    "paths": {
        "/orders": {
            "post": {
                "description": "Packs an order",
                "consumes": [
                    "application/json"
                ],
                "summary": "Pack An Order",
                "parameters": [
                    {
                        "description": "PackOrderRequest",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/api.PackOrderRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/api.PackOrderResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/api.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/packs": {
            "get": {
                "description": "List all pack sizes",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "List Pack Sizes",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/api.ErrorResponse"
                        }
                    }
                }
            },
            "post": {
                "description": "Register a new pack size",
                "consumes": [
                    "application/json"
                ],
                "summary": "Register Pack Size",
                "parameters": [
                    {
                        "description": "RegisterPackRequest",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/api.RegisterPackRequest"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "409": {
                        "description": "Conflict",
                        "schema": {
                            "$ref": "#/definitions/api.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/api.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/packs/{size}": {
            "delete": {
                "description": "Deletes a pack size",
                "consumes": [
                    "application/json"
                ],
                "summary": "Delete Pack Size",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "pack size",
                        "name": "size",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/api.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/api.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "api.ErrorResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        },
        "api.PackOrderRequest": {
            "type": "object",
            "properties": {
                "order": {
                    "type": "integer"
                }
            }
        },
        "api.PackOrderResponse": {
            "type": "object",
            "additionalProperties": {
                "type": "integer"
            }
        },
        "api.RegisterPackRequest": {
            "type": "object",
            "properties": {
                "size": {
                    "type": "integer"
                }
            }
        }
    }
}